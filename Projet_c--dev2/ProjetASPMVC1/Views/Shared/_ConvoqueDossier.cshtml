
@model ProjetASPMVC1.Models.Candidat
<!DOCTYPE html>
<html >
<head>

    <style>


        body {
            font-family: montserrat, arial, verdana;
            background-color: gainsboro;
            height: 150%;
            background-size: cover;
        }

        tr {
            border-bottom: 1px solid gainsboro;
        }

        th {
            padding-top: 15px;
            padding-bottom: 6px;
            padding-left: 60px;
            padding-right: 20px;
        }

        .tabSty {
            padding: 80px;
            margin-top: 100px;
            border-radius: 10px;
            background-color:black;
            color:white;
            opacity:0.7;
            margin-left: 300px;
        }

        .esp {
            margin-left: 10px;
        }

        .form {
            background-color: white;
            margin-top: 20px;
            margin-left: 300px;
            width: 600px;
            padding: 40px;
            border-left: 4px solid cornflowerblue;
            border-right: 4px solid cornflowerblue;
        }
    </style>
</head>
<body>
    <br /><br />
    <p style="margin-left:400px; color:red">@ViewBag.msgE</p>
  
    <table class="form">
        <tr style="border:1px solid cornflowerblue;">
            <th>
                <img src='~/img/@Html.DisplayFor(model => model.photo)' style="width:50px;height:50px;" /> Matricule:
            </th>
            <th class="espace">
                @Html.DisplayFor(model => model.n_dossier)
            </th>
        </tr>
        <tr>
            <th>
                CNE
            </th>
            <th class="espace">
                @Html.DisplayFor(model => model.CNE)
            </th>
        </tr>
        <tr>
            <th>
                CIN
            </th>
            <th class="espace">
                @Html.DisplayFor(model => model.CIN)
            </th>
        </tr>
        <tr>
            <th>
                Prenom
            </th>
            <th class="espace">
                @Html.DisplayFor(model => model.prenom, new { htmlAttributes = new { @class = "form-control" } })
            </th>
        </tr>
        <tr>
            <th>
                Nom
            </th>
            <th class="espace">
                @Html.DisplayFor(model => model.nom, new { htmlAttributes = new { @class = "form-control" } })
            </th>
        </tr>
        <tr>
            <th>
                Sexe
            </th>
            <th class="espace">
                @Html.DisplayFor(model => model.sexe, new { htmlAttributes = new { @class = "form-control" } })
            </th>
        </tr>
        <tr>
            <th>
                Niveau
            </th>
            <th class="espace">
                @Html.DisplayFor(model => model.niveau, new { htmlAttributes = new { @class = "form-control" } })
            </th>
        </tr>
        <tr>
            <th>
                La date de naissance
            </th>
            <th class="espace">
                @Html.DisplayFor(model => model.date_naiss, new { htmlAttributes = new { @class = "form-control" } })
            </th>
        </tr>
        <tr>
            <th>
                L'addresse
            </th>
            <th class="espace">
                @Html.DisplayFor(model => model.addresse, new { htmlAttributes = new { @class = "form-control" } })
            </th>
        </tr>
        <tr>
            <th>
                Telephone
            </th>
            <th class="espace">
                @Html.DisplayFor(model => model.tel, new { htmlAttributes = new { @class = "form-control" } })
            </th>
        </tr>
        <tr>
            <th>
                Diplome
            </th>
            <th class="espace">
                @Html.DisplayFor(model => model.Diplome.nom_diplome, new { htmlAttributes = new { @class = "form-control" } })
            </th>
        </tr>
        <tr>
            <th>
                Filiere
            </th>
            <th class="espace">
                @Html.DisplayFor(model => model.Filiere.nom_fil, new { htmlAttributes = new { @class = "form-control" } })
            </th>
        </tr>
    </table>
    <br /><br /> <br /><br />
    <div class="card mb-4">
        <div class="card-header">Profile de l'etudiant</div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered   table-primary" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                Matricule:
                            </th>
                            <th>
                                CNE
                            </th>
                            <th>
                                CIN
                            </th>
                            <th>
                                Prenom
                            </th>
                            <th>
                                Nom
                            </th>
                            <th>
                                Sexe
                            </th>
                            <th>
                                Niveau
                            </th>
                            <th>
                                La date de naissance
                            </th>
                            <th>
                                L'addresse
                            </th>
                            <th>
                                Telephone
                            </th>
                            <th>
                                Diplome
                            </th>
                            <th>
                                Filiere
                            </th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>
                                @Html.DisplayFor(model => model.n_dossier)
                            </th>


                            <th>
                                @Html.DisplayFor(model => model.CNE)
                            </th>


                            <th>
                                @Html.DisplayFor(model => model.CIN)
                            </th>


                            <th>
                                @Html.DisplayFor(model => model.prenom, new { htmlAttributes = new { @class = "form-control" } })
                            </th>


                            <th>
                                @Html.DisplayFor(model => model.nom, new { htmlAttributes = new { @class = "form-control" } })
                            </th>


                            <th>
                                @Html.DisplayFor(model => model.sexe, new { htmlAttributes = new { @class = "form-control" } })
                            </th>


                            <th>
                                @Html.DisplayFor(model => model.niveau, new { htmlAttributes = new { @class = "form-control" } })
                            </th>
                            <th>
                                @Html.DisplayFor(model => model.date_naiss, new { htmlAttributes = new { @class = "form-control" } })
                            </th>
                            <th>
                                @Html.DisplayFor(model => model.addresse, new { htmlAttributes = new { @class = "form-control" } })
                            </th>

                            <th>
                                @Html.DisplayFor(model => model.tel, new { htmlAttributes = new { @class = "form-control" } })
                            </th>

                            <th>
                                @Html.DisplayFor(model => model.Diplome.nom_diplome, new { htmlAttributes = new { @class = "form-control" } })
                            </th>
                            <th>

                                @Html.DisplayFor(model => model.Filiere.nom_fil, new { htmlAttributes = new { @class = "form-control" } })
                            </th>
                        </tr>
                </table>

            </div>
        </div>
    </div>

</body>
</html>
