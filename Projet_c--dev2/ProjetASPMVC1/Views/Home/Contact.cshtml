@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="contact-section spad">

    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="contact-text">
                    <h2>Contact Info</h2>
                    <p>
                        École nationale des sciences appliquées de Safi
                    </p>
                    <div class="map">
                        <iframe src="https://www.google.com/maps/d/embed?mid=1WJ_cBA200Ns0dvKLcQJxL-lM8g5tRmna" height="470" style="border:0;" allowfullscreen=""></iframe>

                    </div>
                </div>
            </div>

            <div class="col-lg-7 offset-lg-1">

                <div class="contact-form" >
                    <div class="row">
                        <h2>Contact us</h2>

                        @using (Html.BeginForm("SendMessage", "Home", FormMethod.Post))
                        {
                            <br /><br /> <br /><br /> <br /><br />
                            <p>
                                Laisser nous des messages
                            </p>
                            <div class="col-lg-6">
                                <input type="text" placeholder="Ton Nom" name="nom">
                            </div>

                            <div class="col-lg-12">
                                <textarea placeholder="Ton Message" name="message"></textarea>
                                <button type="submit">Envoyer le message</button>
                            </div>
                        }
                    </div>
                </div>

            </div>

        </div>
    
    </div>

</section>
