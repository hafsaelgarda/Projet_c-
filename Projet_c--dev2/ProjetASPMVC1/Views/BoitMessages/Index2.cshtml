

@{

    Layout = "~/Views/Shared/_LayoutAdmin.cshtml ";
}

@model IEnumerable<ProjetASPMVC1.Models.BoitMessage>

@{
    ViewBag.Title = "Index";
}
<table class="table">
    <tr  style=" color:blue;">
        <th >
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th >
            Messages
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td >
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td class="bg-light" >
                @Html.DisplayFor(modelItem => item.message)
            </td>

            <td>
                @Html.ActionLink("Supprimer le message", "delete", new { id = item.id }) |<i class="fa fa-trash"></i>

            </td>
        </tr>
    }

</table>
